{{!-- handlebars for logging in or signing up --}}
<header>
  <h2> <span class="span">BookNook</span> | Your All-In-One Digital Home Library</h2>
</header>

<div class="container" id="container">
  <div class="form-container sign-up-container">
    <form action="#">
      <h1 class="sign-in-sign-up">Sign Up</h1>


      <input type="text" id="username-signup" placeholder="Username" />
      <input type="email" id="email-signup" placeholder="Email" />
      <input type="password" id="password-signup" placeholder="Password" />
      <button class="signup-form">Create Account</button>
    </form>
  </div>
  <div class="form-container sign-in-container">
    <form action="#">
      <h1 class="sign-in-sign-up">Sign in</h1>
      <input type="email" id="email-login" placeholder="Email" />
      <input type="password" id="password-login" placeholder="Password" />

      <button class="login-form">Enter Library</button>
    </form>
  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-panel overlay-left">
        <h1>Welcome Back!</h1>
        <p>To keep connected with your personal library, please login with your account information</p>
        <button class="ghost" id="signIn">Sign In</button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>Hello, Reader!</h1>
        <p>New to Book Nook? Easily sign up and create your online library!</p>
        <button class="ghost" id="signUp">Sign Up</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>